<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.muse">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
             android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ColorListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.muse.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.muse.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.ArtifactListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.muse.ui.ColorListActivity" />
        </activity>
        <activity android:name=".ui.ArtifactDetailActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.SavedArtifactListActivity" />
        <activity android:name=".ui.UserAccountActivity"></activity>
    </application>

</manifest>